@using yoked
@using yoked.Entities
@model User

<!doctype html>
<html lang="en-US">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Yoked</title>
    <link rel="stylesheet" href="~/css/Index.css">
</head>
<body onload="generateUserBirthYears()">
    <div style="display:flex; justify-content: center;border-style:solid">
            <div id="app-title">yoked</div>
    </div>
    <div style="width:35vw;border-style:dashed"
    >
        <div style="display:flex; justify-content: center; font-size:25px;margin: 20px 0px 20px 0px">
            Create A New Account
        </div>
        <div style="display:flex; justify-content: space-around;font-size:15px;">
            <input style="padding:10px;" placeholder="First name" />
            <input placeholder="Last name" />
        </div>
        <div>
            Birthday
        </div>
        <div style="display:flex; justify-content: space-around;">
            <div>
                <select id="birthMonth" name="birthMonth" data-type="selectors">
                    <option value="1">Jan</option>
                    <option value="2">Feb</option>
                    <option value="3">Mar</option>
                    <option value="4">Apr</option>
                    <option value="5">May</option>
                    <option value="6">Jun</option>
                    <option value="7">Jul</option>
                    <option value="8">Aug</option>
                    <option value="9">Sep</option>
                    <option value="10">Oct</option>
                    <option value="11">Nov</option>
                    <option value="12">Dec</option>
                </select>
            </div>
            <div>
                <select id="birthDay" name="birthDay" data-type="selectors">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                    <option value="11">11</option>
                    <option value="12">12</option>
                    <option value="13">13</option>
                    <option value="14">14</option>
                    <option value="15">15</option>
                    <option value="16">16</option>
                    <option value="17">17</option>
                    <option value="18">18</option>
                    <option value="19">19</option>
                    <option value="20">20</option>
                    <option value="21">21</option>
                    <option value="22">22</option>
                    <option value="23">23</option>
                    <option value="24">12</option>
                    <option value="25">25</option>
                    <option value="26">26</option>
                    <option value="27">27</option>
                    <option value="28">28</option>
                    <option value="29">29</option>
                    <option value="30">30</option>
                    <option value="31">31</option>
                </select>
            </div>
            <div>
                <select id="birthYear" name="birthYear" data-type="selectors">
                </select>
            </div>
                
        </div>
        <div>
            Gender
        </div>
        <div style="display:flex; justify-content: space-around;">
            <label>
                Female
                <input type="radio" id="gender" name="gender" value="1"/>
            </label>
            <label>
                Male
                <input type="radio" id="gender" name="gender" value="1" />
            </label>
            <label>
                Other
                <input type="radio" id="gender" name="gender" value="1" />
            </label>
            
        </div>
        <div>
            <input type="text" id="email" name="email" value="" placeholder="Enter email" label="Enter email">
        </div>
        <div>
            <input type="text" id="email" name="email" value="" placeholder="Enter password" label="Enter email">
        </div>
    </div>

    <script type="text/javascript" language="javascript" src="~/js/util.js"></script>
    <script>
        generateUserBirthYears();
    </script>
        
</body>
</html>

