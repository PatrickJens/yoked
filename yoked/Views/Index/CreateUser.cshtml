@using yoked
@using yoked.Entities
@model User

<!doctype html>
<html lang="en-US">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Yoked</title>
    <link rel="stylesheet" href="~/css/CreateUser.css">
</head>
<body>
    <div  style="display:flex; justify-content: center;border-style:solid">
            <div id="app-title"></div>
    </div>

    <form action="/Index/SubmitUserCreate/" method="post" id ="create-user-form" style="display:flex; justify-content: center;">
        <div class="form-body">
            <div class="form-title">
                Create A New Account
            </div>
            <div style="display:flex;font-size:35px;font-weight:600;justify-content:space-between;padding:0px 19px 0px 19px">
                <input name="firstName" class="name-regF" placeholder="First name" />
                <input name="lastName" class="name-regL" placeholder="Last name" />
            </div>
            <div class="mini-title">
                Birthday
            </div>
            <div style="display:flex; justify-content: space-between;padding:0px 19px 0px 19px">
                <div>
                    <select class="date-reg" id="birthMonth" name="birthMonth" data-type="selectors">
                        <option value="1">Jan</option>
                        <option value="2">Feb</option>
                        <option value="3">Mar</option>
                        <option value="4">Apr</option>
                        <option value="5">May</option>
                        <option value="6">Jun</option>
                        <option value="7">Jul</option>
                        <option value="8">Aug</option>
                        <option value="9">Sep</option>
                        <option value="10">Oct</option>
                        <option value="11">Nov</option>
                        <option value="12">Dec</option>
                    </select>
                </div>
                <div>
                    <select class="date-reg" id="birthDay" name="birthDay" data-type="selectors">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                        <option value="11">11</option>
                        <option value="12">12</option>
                        <option value="13">13</option>
                        <option value="14">14</option>
                        <option value="15">15</option>
                        <option value="16">16</option>
                        <option value="17">17</option>
                        <option value="18">18</option>
                        <option value="19">19</option>
                        <option value="20">20</option>
                        <option value="21">21</option>
                        <option value="22">22</option>
                        <option value="23">23</option>
                        <option value="24">12</option>
                        <option value="25">25</option>
                        <option value="26">26</option>
                        <option value="27">27</option>
                        <option value="28">28</option>
                        <option value="29">29</option>
                        <option value="30">30</option>
                        <option value="31">31</option>
                    </select>
                </div>
                <div>
                    <select class="date-reg" id="birthYear" name="birthYear" data-type="selectors">
                    </select>
                </div>
                
            </div>
            <div class="mini-title">
                Gender
            </div>
            <div style="display:flex; justify-content: space-between;padding:0px 19px 0px 19px">
                <label style=""class="gender-card">
                    Female
                    <input type="radio" id="gender" name="gender" value="M"/>
                </label>
                <label class="gender-card">
                    Male
                    <input type="radio" id="gender" name="gender" value="F" />
                </label>
                <label class="gender-card">
                    Other
                    <input type="radio" id="gender" name="gender" value="O" />
                </label>
            
            </div>
            <div>
                <input class="email-reg" type="text" id="email" name="email" value="" placeholder="Enter email" label="Enter email">
            </div>
            <div>
                <input class="email-reg" type="text" id="email" name="email" value="" placeholder="Enter password" label="Enter email">
            </div>
            <input id="index-web-submit" name="websubmit "type="submit" value="Sign Up" />
        </div>
    </form>
    <script type="text/javascript" language="javascript" src="~/js/util.js"></script>
    <script>
        generateUserBirthYears();
    </script>
        
</body>
</html>

